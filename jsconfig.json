{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test": ["test/*"]
    },
    "sourceMap": false
  },
  "include": [
    "src/**/*.js",
    "src/**/*.vue",
    "test/**/*.js"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "coverage"
  ]
}
